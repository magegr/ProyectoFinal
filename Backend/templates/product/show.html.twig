{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container py-4">
    <header class="d-flex flex-wrap align-items-center justify-content-between mb-3">
        <div>

            <h1 class="h3 mb-1 title">Productos</h1>
            <p class="mb-0 text-body-secondary">Informacion del producto</p>
            <a href="{{ path('app_product_index') }}"
               class="btn btn-link text-decoration-none"
               aria-label="Volver al menu">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H3.707l3.147 3.146a.5.5 0 0 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L3.707 7.5H14.5A.5.5 0 0 1 15 8z"/>
                </svg>
                <span class="visually-hidden">Back to menu</span>
            </a>


        </div>
    </header>
    <section class="shadow-sm rounded-3 d-flex flex-wrap bg-white  align-items-center justify-content-between mb-3">

        <img  style="width: 40%; height: auto;" src="{{ asset('uploads/' ~ product.image) }}" alt="Producto">

        <div class="p-3 ">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ product.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Marca</th>
                <td>{{ product.trend }}</td>
            </tr>
            <tr>
                <th>Tipo de montura</th>
                <td>{{ product.mountType }}</td>
            </tr>
            <tr>
                <th>Material</th>
                <td>{{ product.material }}</td>
            </tr>
            <tr>
                <th>Genero</th>
                <td>{{ product.gender }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ product.color }}</td>
            </tr>
            <tr>
                <th>Graduación</th>
                <td>{{ product.graduation }}</td>
            </tr>
            <tr>
                <th>Duración</th>
                <td>{{ product.duration }}</td>
            </tr>
            <tr>
                <th>Diametro</th>
                <td>{{ product.diameter }}</td>
            </tr>

        </tbody>
    </table>
            <div class="d-flex mt-2 gap-2">
                <a class="btn btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Editar producto</a>
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
{% endblock %}
