{% extends 'base.html.twig' %}

{% block title %}Panell | Òptica Adam{% endblock %}

{% block stylesheets %}
    <style>
        :root{
            --navy:#0D2B45;
            --bg:#dfeaf6;
            --border: rgba(13,43,69,.12);
            --text: rgba(13,43,69,.78);
        }

        body{
            background-color:var(--bg);
            color: var(--text);
        }

        .panel-card{
            margin: auto;
            background: #fff;
            width: 100%;
            max-width: 560px;
            border: 1px solid var(--border);
            border-radius: 22px;
            box-shadow: 0 1rem 2.5rem rgba(13,43,69,.10);
        }

        .panel-btn{
            width: 100%;
            text-align: left;
            background: #fff;
            border: 1px solid rgba(13,43,69,.15);
            border-radius: 16px;
            padding: 18px 18px;
            transition: transform .15s ease, box-shadow .15s ease, border-color .15s ease;
        }

        .panel-btn:hover{
            transform: translateY(-2px);
            box-shadow: 0 .8rem 2rem rgba(13,43,69,.12);
            border-color: var(--bg);
        }

        .panel-btn strong{
            display:block;
            color: var(--navy);
            font-size: 1.05rem;
        }

        .panel-btn span{
            display:block;
            color: rgba(13,43,69,.75);
            margin-top: 4px;
            font-size: .95rem;
        }

        .pill{
            display:inline-block;
            margin-top: 10px;
            background: var(--bg);
            color: var(--navy);
            border: 1px solid rgba(13,43,69,.18);
            border-radius: 10px;
            padding: 6px 12px;
            font-weight: 700;
            font-size: .85rem;
        }

        footer{
            color: rgba(13,43,69,.65);
            font-size: .9rem;
        }
    </style>
{% endblock %}

{% block body %}
    <main class="container py-5">
        <section class="panel-card p-4 p-md-5" aria-label="Navegació del panell">
            <div class="row g-3">
                <article class="col-12">
                    <a class="btn panel-btn" href="{{ path('app_user_index') }}">
                        <strong>Usuarios</strong>
                        <span>Gestiona usuarios</span>
                        <span class="pill">Ir a usuarios</span>
                    </a>
                </article>

                <article class="col-12">
                    <a class="btn panel-btn" href="{{ path('app_product_index') }}">
                        <strong>Productos</strong>
                        <span>Catalogo, stock , precios e imagenes.</span>
                        <span class="pill">Ir a productos</span>
                    </a>
                </article>

                <article class="col-12">
                    <a class="btn panel-btn" href="{{ path('app_appointment_index') }}">
                        <strong>Citas</strong>
                        <span>Agenda y reservas</span>
                        <span class="pill">Ir a citas</span>
                    </a>
                </article>
            </div>
        </section>
    </main>

    <footer class="py-4">
        <div class="container text-center">
            <small>© Òptica Adam</small>
        </div>
    </footer>
{% endblock %}
