{% extends 'base.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}
    <h1>Appointment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname1</th>
                <th>Surname2</th>
                <th>FirstTime</th>
                <th>Type</th>
                <th>AgreeTerms</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.id }}</td>
                <td>{{ appointment.name }}</td>
                <td>{{ appointment.surname1 }}</td>
                <td>{{ appointment.surname2 }}</td>
                <td>{{ appointment.firstTime ? 'Yes' : 'No' }}</td>
                <td>{{ appointment.type }}</td>
                <td>{{ appointment.agreeTerms ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">show</a>
                    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appointment_new') }}">Create new</a>
{% endblock %}
