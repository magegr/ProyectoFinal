{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1>Appointment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ appointment.name }}</td>
            </tr>
            <tr>
                <th>Surname1</th>
                <td>{{ appointment.surname1 }}</td>
            </tr>
            <tr>
                <th>Surname2</th>
                <td>{{ appointment.surname2 }}</td>
            </tr>
            <tr>
                <th>FirstTime</th>
                <td>{{ appointment.firstTime ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ appointment.type }}</td>
            </tr>
            <tr>
                <th>AgreeTerms</th>
                <td>{{ appointment.agreeTerms ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_appointment_index') }}">back to list</a>

    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>

    {{ include('appointment/_delete_form.html.twig') }}
{% endblock %}
